<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Theme"
    android:gravity="center"
    tools:context=".MyActivity">

    <com.example.nepus.idash.ArcProgress
        android:id="@+id/fuel_progress"
        custom:arc_bottom_text="Remaining fuel"
        custom:arc_suffix_text="%"
        style="@style/Big_widget"
        />

    <TextView
        style="@style/Header"
        android:text="@string/title_energy"/>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/energy_rate" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_speed"
            android:text="10 km/l" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/distance_sinceStart" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_rpm"
            android:text="10 minute" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/energy_pressure" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_torque"
            android:text="40 PSI" />
    </LinearLayout>


</LinearLayout>