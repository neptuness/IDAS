<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Theme"
    android:gravity="center"
    tools:context=".MyActivity">

    <com.example.nepus.idash.ArcProgress
        android:id="@+id/coolant_progress"
        custom:arc_bottom_text="Coolant temperature"
        custom:arc_suffix_text="o"
        style="@style/Big_widget"
        />

    <TextView
        style="@style/Header"
        android:text="@string/title_temperature"/>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/temp_coolant" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_speed"
            android:text="89 celcius" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/temp_engine" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_rpm"
            android:text="95 celcius" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/temp_MAF" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_torque"
            android:text="3 million arce-feet" />
    </LinearLayout>


</LinearLayout>