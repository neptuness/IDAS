<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/Theme">

    <TextView
        style="@style/Header"
        android:text="@string/title_speed"/>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/speed_rpm" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_rpm"
            android:text="@string/dummy_data" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/speed_torque" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_torque"
            android:text="@string/dummy_data" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearDetails">
        <TextView
            style="@style/Details"
            android:text="@string/speed_max" />

        <TextView
            style="@style/Details"
            android:id="@+id/val_maxSpeed"
            android:text="@string/dummy_data" />
    </LinearLayout>
</LinearLayout>