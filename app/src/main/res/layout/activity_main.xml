<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff212121"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ImageButton
        android:layout_width="250dip"
        android:layout_height="250dip"
        android:background="@drawable/btn_dashboard"

        android:id="@+id/imgBtn_dashboard"
        android:onClick="gotoSystem"
        >

    </ImageButton>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            style="@style/ImageButton"
            android:background="@drawable/btn_map"
            android:id="@+id/button_history"
            android:onClick="gotoHistory"
            />

        <ImageButton
            style="@style/ImageButton"
            android:background="@drawable/btn_notification"
            android:id="@+id/button_notification"
            android:onClick="gotoNotification"/>

        <ImageButton
            style="@style/ImageButton"
            android:background="@drawable/btn_setting"
            android:id="@+id/button_setting"
            android:onClick="gotoSetting"/>

        </LinearLayout>


</LinearLayout>